<h1>Push notifications</h1>
<section id="alerts">
<div class="form-group">
  <label for="enable-alerts">Enable push request if your browser supports it. You also have to subscribe to the topics below.</label>
</div>
<div class="form-group">
  <div class="input-group input-group-lg">
  <button type="button" class="btn btn-info" data-toggle="button" aria-pressed="false" autocomplete="off" id="enable-alerts">
    Enable Push Notifications
  </button>

  </div>
</div>


<div class="form-group hidden" id="alert-types">
  <label for="enable-alerts">Select the types of alerts you want to receive:</label>
<div class="input-group input-group-lg hidden">
  <div class="btn-group-vertical" data-toggle="buttons">
    <% PushNotification::ALERT_TYPES.each do |channel| %>
    <label class="btn btn-info">
      <input type="checkbox" autocomplete="off" class="alert-channel" id="channel-<%=channel%>" data-channel="<%=channel%>"> <%=channel%>
    </label>
    <% end %>
  </div>
</div>
</div>


</section>

<%= javascript_include_tag 'alerts' %>